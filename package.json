{
	"name": "go-kickstart",
	"version": "1.0.0",
	"scripts": {
		"build": "turbo run build",
		"dev:all": "turbo run dev",
		"dev": "turbo run dev --filter=./apps/*",
		"format:check": "turbo run format:check",
		"format:fix": "turbo run format:fix",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"clean": "turbo run clean && rimraf node_modules",
		"api:run": "cd apps/api && go run ./cmd/api",
		"api:seed": "cd apps/api && make seed",
		"api:migrate:new": "cd apps/api && make migrate-new",
		"api:migrate:up": "cd apps/api && make migrate-up",
		"api:migrate:down": "cd apps/api && make migrate-down",
		"api:migrate:fresh": "cd apps/api && make migrate-fresh",
		"api:tidy": "cd apps/api && go fmt ./... && go mod tidy && go mod verify",
		"api:install": "cd apps/api && go mod download",
		"api:test": "cd apps/api && sh -c \"go test -covermode=atomic -coverprofile=coverage.out ./internal/handler ./internal/service ./internal/middleware ./internal/repository && go tool cover -func=coverage.out | tail -n1 && go tool cover -html=coverage.out -o coverage.html\"",
		"web:test": "cd apps/web && bun run test:ci",
		"ui:shadcn:add": "cd packages/ui && bunx --bun shadcn@latest add",
		"web:shadcn:add": "bun run ui:shadcn:add",
		"openapi:generate": "cd packages/openapi && bun generate",
		"emails:generate": "cd packages/emails && bun run generate",
		"postinstall": "bun run api:install"
	},
	"packageManager": "bun@1.2.13",
	"engines": {
		"node": ">=22"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"devDependencies": {
		"turbo": "^2.5.5",
		"typescript": "^5.8.3"
	}
}
